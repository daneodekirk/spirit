doctype html5
html
  head 
    title #{Spirit.title}
    meta(content=Spirit.description, name="description")
    link(href='//fonts.googleapis.com/css?family=Raleway:400,200',rel='stylesheet',type='text/css')
    link(rel='stylesheet', href='/spirit.dev.css')
    <link href='' rel='stylesheet' type='text/css'>
    script(type='text/javascript', src='/spirit.dev.js')
    block head

  body
    block splash
      div.splash(style="background-image:url("+ Spirit.image +")")
        a(href='/')

    block content

    block admin
      if ( post ) 
        div.navbar.navbar-default.navbar-fixed-bottom(role='navigation')
          div.navbar-collapse.collapse.navbar-right
            ul.nav.navbar-nav.spirit-bar
              li
                a.delete(type='submit') Delete
              li
                a.save(type='submit') Save
              li
                a.save(type='submit',data-status="",data-id=post._id ) Publish

  block footer
  script(type='text/javascript', src='/admin.dev.js')
  link(rel="stylesheet", href="/admin.dev.css")
